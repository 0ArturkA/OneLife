#!/bin/sh

if [ ! -e minorGems ]
then
	hg clone http://hg.code.sf.net/p/minorgems/minorGems	
fi

if [ ! -e OneLife ]
then
	hg clone http://hg.code.sf.net/p/hcsoftware/OneLife	
fi

if [ ! -e OneLifeData7 ]
then
	hg clone http://hg.code.sf.net/p/hcsoftware/OneLifeData7	
fi


cd minorGems
hg pull
latestTaggedVersion=`hg tags | grep "OneLife" -m 1 | awk '{print $1}' | sed -e 's/OneLife_v//'`
hg update OneLife_v$latestTaggedVersion


cd ../OneLife
hg pull
latestTaggedVersionA=`hg tags | grep "OneLife" -m 1 | awk '{print $1}' | sed -e 's/OneLife_v//'`
hg update OneLife_v$latestTaggedVersionA


cd ../OneLifeData7
hg pull
latestTaggedVersionB=`hg tags | grep "OneLife" -m 1 | awk '{print $1}' | sed -e 's/OneLife_v//'`
hg update OneLife_v$latestTaggedVersionB


latestVersion=$latestTaggedVersionB


if [ $latestTaggedVersionA -gt $latestTaggedVersionB ]
then
	latestVersion=$latestTaggedVersionA
fi



cd ..


if [ ! -h animations ]
then
	ln -s OneLifeData7/animations .	
fi


if [ ! -h categories ]
then
	ln -s OneLifeData7/categories .	
fi


if [ ! -h ground ]
then
	ln -s OneLifeData7/ground .	
fi


if [ ! -h music ]
then
	ln -s OneLifeData7/music .	
fi


if [ ! -h objects ]
then
	ln -s OneLifeData7/objects .	
fi


if [ ! -h sounds ]
then
	ln -s OneLifeData7/sounds .	
fi


if [ ! -h sprites ]
then
	ln -s OneLifeData7/sprites .	
fi


if [ ! -h dataVersionNumber.txt ]
then
	ln -s OneLifeData7/dataVersionNumber.txt .	
fi




cp OneLife/build/source/runToBuild .


./runToBuild 1



echo
echo
echo "Done building v$latestVersion"